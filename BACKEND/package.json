{
  "name": "typescript-back-template",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "nodemon src/server.ts",
    "db": "npx prisma generate && npx prisma migrate deploy",
    "test": "NODE_ENV=test jest --runInBand --coverage",
    "test:unit": "NODE_ENV=test jest --testPathPatterns=tests/unit",
    "test:integration": "NODE_ENV=test jest --testPathPatterns=tests/integration",
    "test:e2e": "NODE_ENV=test nodemon src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docker:test": "docker-compose -f docker-compose.test.yml --env-file .env.test up --build --abort-on-container-exit",
    "docker:down": "docker-compose -f docker-compose.test.yml --env-file .env.test down --remove-orphans"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/chance": "^1.1.7",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "chance": "^1.1.13",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "swagger-ui-express": "^5.0.1"
  }
}